<% layout('layout/layout.ejs') -%>
<body>
  
    <% for (let product of products) {%>
    <div class="card" style="width: 500px; display: inline-block; margin: auto;">
  <img src="<%= product.picture %>" style="width: 500px;" height="500px" alt="...">
  <div class="card-body">
    <h5 class="card-title">Name:<%= product.name %></h5>
      <p class="card-title"><b>Price:$<%= product.price %></b></p>
      <p class="card-title"><b>Company name:<%= product.company %></b></p>
      <p class="card-text">Product Description <%= product.description %></p>
      <% if (currentuser && currentuser._id.equals(product.owner)) {%>
            <a href="/delete/<%= product._id %>" class="btn btn-warning">Delete</a>
    <a href="/edit/<%= product._id %>" class="btn btn-danger">Edit</a>
     <%  }%>
      <% if (currentuser && !currentuser._id.equals(product.owner)) {%> 
         <a href="#" class="btn btn-primary">Order Now</a>
    <a href="#" class="btn btn-secondary">Add to Cart</a>
     <%  } %>
  </div>
</div>
<%  } %>

</body>